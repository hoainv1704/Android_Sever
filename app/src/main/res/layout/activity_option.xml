<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.OptionActivity">


    <ImageView
        android:id="@+id/imageViewOption"
        android:layout_above="@+id/tvCenter"
        android:layout_width="555px"
        android:layout_height="320px"
        android:layout_marginLeft="135px"
        android:layout_marginTop="150px"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="  "/>

    <Button
        android:id="@+id/btnLog"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@drawable/btnsignin_gradient"
        android:text="Already have an account? Login!" />

    <Button
        android:id="@+id/btnGuest"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="@drawable/btnsignin_gradient"
        android:text="Try by Guest Account?" />

</RelativeLayout>